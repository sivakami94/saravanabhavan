

<section class="cart m-5" >
  <% if(session.cart ) { %>
    <div class="container-fuild bg-white p-5 text-center"> 
        <div>
            <img  src="./Images/full-cart.jpg"width="10%" height="auto"alt="full-cart">
            <h4 class="text-danger">Order summary</h4>
        </div>
       <div class="jumbotron bg-warning m-5 p-4">
          <% for(let menu of Object.values(session.cart.items)) { %>
            <% if(menu.qty>0){ %>
              <div class="row">
               <div class="col-lg-4">
                   <img class="float-left pr-3" src="./Images/<%= menu.item.image %>" width="80px" height="70px">
                   <h4 class="text-left  p-3"><%= menu.item.name %></h4>
               </div>
               <div class="col-lg-4">
                    <h4 class="p-3"><%= menu.qty %> pcs</h4>
               </div>
               <div class="col-lg-4">
                   <h4 class="p-3">₹<%= menu.item.price*menu.qty %> </h4>
               </div>
             </div>
            <hr>
           <% } %>
           <% } %>
       </div>
      </div>
        <hr>
       <div class="container">
           <div class="text-right m-5 ">
                 <h3> <strong>Total Amount:</strong> <h4 class="text-success">₹<%=session.cart.totalPrice %></h4></h3>
          </div>
        <div class="col-md-6 col-lg-12 " >
           <form action="/orders" method="POST">
              <legend>Location:</legend>
                  <div class="form-check">
                      <p>Check if your location is udumalpet </p>
                       <input  name="location" class="form-check-input" type="checkbox" value="" id="flexCheckDefault" />
                       <label class="form-check-label" for="flexCheckDefault"> Udumalpet </label>
                  </div>
           
                   <div class="form-inline">
                        <legend >Phone Number:</legend>
                        <input name="phone" class="form-control" type="tel" placeholder="Phone Number" >
                  </div>
                   <br>
                   <div class="form-inline">
                         <legend >Address:</legend>
                         <textarea name="address" class="form-control" placeholder="Address" rows="2"></textarea>
                  </div>
                   <button class="btn btn-danger float-right" type="submit">Order Now</button>
              </form>
        </div>
   </div>
        
      
        
</section>
          <% } else{ %>
          <section class="empty-cart ">
             <div class="container-fuild bg-white p-5 text-center"> 
      
       <div>
            <a class="btn btn-warning" href="/menu" type="submit">Continue Shopping</a>
         
            </div>
            <br>
             <img  src="./Images/empty-cart.jpeg" width="50%" height="auto"alt="empty-cart">
        
               </div>
          </section>
          <% } %>

      