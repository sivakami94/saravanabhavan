
  
    <div class="container-fluid pt-5">
      <div class="row">
        <div class="col-lg-2 ">
              <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
               <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">Dosa </a>
               <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">Idly</a>
               <a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages" role="tab" aria-controls="v-pills-messages" aria-selected="false">Parotta</a>
               <a class="nav-link" id="v-pills-settings-tab" data-toggle="pill" href="#v-pills-settings" role="tab" aria-controls="v-pills-settings" aria-selected="false">Briyani</a>
            </div>
            </div>
<div class="col-md-6 float-left">
<div class="tab-content" id="v-pills-tabContent">
  <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
    <div class="row">
      
      <% menus.forEach(function(menu){ %>
        <% if(menu.category=="Dosa") { %>
      <div class="col-sm-6 col-lg-6">
        <div class="card p-3 m-sm-3" style="width: 250px;">
          <h5><%= menu.name %></h5>
          <img src="./Images/<%=menu.image %>"  class="card-img-top" alt="...">
          <div class="card-body">
        
              <div class="btn-group float-right" role="group" aria-label="Basic example">
                <button data-menu="<%= JSON.stringify(menu) %>" id="minus"  type="submit" class="btn btn-outline-danger">-</button>
                <button data-menu="<%= JSON.stringify(menu) %>"id="add"  type="submit" class="btn btn-outline-danger">+</button>
              </div> 
              <h4 data-menu="<%= JSON.stringify(menu) %>"class=" card-text"><%= menu.price %></h4>

          </div>
        </div>
      </div>
      <% } %>
      <% }) %>
    </div>
  </div>
  <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
    <div class="row">
      <% menus.forEach(function(menu){ %>
        <% if(menu.category=="Idly") { %>
      <div class="col-sm-6 col-lg-6">
        <div class="card p-3 m-sm-3" style="width: 250px;">
          <h5><%= menu.name %></h5>
          <img src="./Images/<%=menu.image %>"  class="card-img-top" alt="...">
          <div class="card-body">
            <h4 data-menu="<%= JSON.stringify(menu) %>"class="add-to-cart card-text"><%= menu.price %><button class="btn btn-outline-danger float-right" type="submit">+Add</button></h4>

          </div>
        </div>
      </div>
      <% } %>
      <% }) %>
    </div>
  </div>
  <div class="tab-pane fade" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab">
    <div class="row">
      <% menus.forEach(function(menu){ %>
        <% if(menu.category=="Parotta"){ %>
      <div class="col-sm-4 col-md-3">
        <div class="card p-3 m-sm-3" style="width: 250px;">
          <h5><%= menu.name %></h5>
          <img src="./Images/<%=menu.image %>"  class="card-img-top" alt="...">
          <div class="card-body">
            <h4 data-menu="<%= JSON.stringify(menu) %>"class="add-to-cart card-text"><%= menu.price %><button class="btn btn-outline-danger float-right" type="submit">+Add</button></h4>

          </div>
        </div>
      </div>
      <% } %>
      <% }) %>
    </div>
  </div>
  <div class="tab-pane fade" id="v-pills-settings" role="tabpanel" aria-labelledby="v-pills-settings-tab">
    <div class="row">
      <% menus.forEach(function(menu){ %>
        <% if(menu.category=="Briyani") { %>
      <div class="col-sm-4 col-md-3">
        <div class="card p-3 m-sm-3" style="width: 250px;">
          <h5><%= menu.name %></h5>
          <img src="./Images/<%=menu.image %>"  class="card-img-top" alt="...">
          <div class="card-body">
            <h4 data-menu="<%= JSON.stringify(menu) %>"class="add-to-cart card-text"><%= menu.price %><button class="btn btn-outline-danger float-right" type="submit">+Add</button></h4>

          </div>
        </div>
      </div>
      <% } %>
      <% }) %>
    </div>
  </div>
</div>
</div>

  <div class="col-md-3 float-right pt-5 ">
    <% if(session.cart) { %>
      <div class="jumbotron ">
            <% for(let menu of Object.values(session.cart.items)) { %>
              <% if(menu.qty>0){ %>
               <div class="row">
                   <div class="col-lg-4">
                     
                    <h4 class="text-left  p-3"><%= menu.item.name %></h4>
                   </div>
                   <div class="col-lg-4">
                  <h4 class="p-3"><%= menu.qty %> pcs</h4>
                   </div>
                   <div class="col-lg-4">
                    <h4 class="p-3">₹<%= menu.item.price*menu.qty %> </h4>
                   </div>
               </div>
               <hr>
               <% } %>
               <% } %>
           </div>
           <div class="text-right m-5 ">
            <h3> <strong>Total Amount:</strong> <h4 class="text-success">₹<%=session.cart.totalPrice %></h4></h3>
            </div>
          <% } %>
        </div>
        </div>
  </div>

